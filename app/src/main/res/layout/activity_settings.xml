<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_500">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <ImageView
        android:id="@+id/logosettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="75dp"

        android:src="@drawable/camionazul" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"

        android:layout_marginTop="340dp"
        >

        <ImageView
            android:id="@+id/logoapp"
            android:layout_width="80dp"
            android:layout_height="90dp"

            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iconoapp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Agenda Comercial"
            android:textStyle="bold"
            android:textColor="@color/yellowFlatShadow"
            android:textSize="22dp"
            android:background="@color/md_indigo_500"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/logoapp"
            android:layout_toEndOf="@+id/logoapp" />

        <TextView

            android:id="@+id/txt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="VersiÃ³n 1.0"
            android:textStyle="bold"
            android:textColor="@color/yellowFlatShadow"
            android:textSize="19dp"
            android:background="@color/md_indigo_500"

            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_below="@+id/txt1"
            android:layout_toRightOf="@+id/logoapp"
            android:layout_toEndOf="@+id/logoapp" />



    </RelativeLayout>




    <TextView

        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="8dp"
        android:text="@string/about"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:background="@color/md_indigo_500"
        android:id="@+id/textoabout"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/twiter"
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="575dp"
        android:textSize="11sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/enlace"
        android:id="@+id/url"
        android:layout_marginLeft="105dp"
        android:textColorLink="@color/yellowFlatShadow"
        android:layout_marginTop="575dp"
        android:linksClickable="true"
        android:textSize="11sp"/>
</FrameLayout>
