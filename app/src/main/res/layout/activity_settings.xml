<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_500">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <ImageView
        android:id="@+id/logosettings"
        android:layout_width="380dp"
        android:layout_height="190dp"
        android:layout_gravity="top"
        android:layout_marginTop="85dp"

        android:src="@drawable/camionazul" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"

        android:layout_marginTop="300dp"
        >

        <ImageView
            android:id="@+id/logoapp"
            android:layout_width="80dp"
            android:layout_height="90dp"

            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iconoapp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/logoapp"
            android:layout_marginLeft="25dp"
            android:text="Agenda Comercial"
            android:textStyle="bold"
            android:textColor="@color/yellowFlatShadow"
            android:textSize="25dp"
            android:background="@color/md_indigo_500"

             />

        <TextView

            android:id="@+id/txt2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="VersiÃ³n 1.0"
            android:textStyle="bold"
            android:textColor="@color/yellowFlatShadow"
            android:textSize="25dp"
            android:background="@color/md_indigo_500"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/logoapp"
            android:layout_marginTop="40dp"
             />



    </RelativeLayout>




    <TextView

        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginTop="410dp"

        android:text="@string/about"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:background="@color/md_indigo_500"
        android:id="@+id/textoabout"
       />

</FrameLayout>
