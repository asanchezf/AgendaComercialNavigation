<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >

<!--Ponemos un PreferenceCategory vacio para que deje espacio al no poner Toolbar-->
    <PreferenceCategory android:title="">
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_user_category">

        <SwitchPreference
            android:key="swipe_refresh"
            android:title="@string/title_swipe_refresh"
            android:summary="@string/summary_swipe_refresh"
            android:defaultValue="false" />
        <EditTextPreference
            android:key="username"
            android:title="@string/title_config_username"
            android:summary="@string/config_username"
            android:defaultValue="" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_server_category">
        <EditTextPreference
            android:key="server_address"
            android:title="@string/title_config_server"
            android:summary="@string/summary_config_server"
            android:defaultValue="" />
        <EditTextPreference
            android:key="server_port"
            android:inputType="number"
            android:title="@string/title_config_port"
            android:summary="@string/summary_config_port"
            android:defaultValue="8084" />
    </PreferenceCategory>



</PreferenceScreen>